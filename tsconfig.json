{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": ["src/**/*", ".eslintrc.js"]
}
