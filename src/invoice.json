{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Invoice JSON schema",
  "type": "object",
  "required": [
    "reference",
    "date",
    "paymentDelayInDays",
    "customer",
    "biller",
    "itemInvoices"
  ],
  "properties": {
    "reference": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "paymenDelayInDays": {
      "type": "number"
    },
    "customer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "address": {
          "$ref": "#/$defs/address"
        }
      }
    },
    "biller": {
      "type": "object",
      "properties": {
        "phoneNumber": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "invoiceLegalFooter": {
          "type": "string"
        },
        "address": {
          "$ref": "#/$defs/address"
        }
      }
    },
    "itemInvoices": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          },
          "unitPriceWithoutTax": {
            "type": "number"
          },
          "taxPercent": {
            "type": "number"
          }
        }
      }
    }
  },
  "$defs": {
    "address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "zipcode": {
          "type": "string"
        },
        "state": {
          "type": [
            "string",
            "null"
          ]
        },
        "country": {
          "type": "string"
        },
        "additional": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
